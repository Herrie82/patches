+// Adapted from https://github.com/enyojs/enyo/wiki/Creating-Components
+enyo.kind({
+    name: "CustomTimer",
+    kind: enyo.Component,
+    published: {
+        interval: 5000
+    },
+    events: {
+        onTriggered: ""
+    },
+    create: function() {
+        this.inherited(arguments);
+        this.start();
+    },
+    destroy: function() {
+        this.stopTimer();
+        this.inherited(arguments);
+    },
+    start: function() {
+        this.job = window.setInterval(enyo.bind(this, "timer"), this.interval);
+    },
+    stop: function() {
+        window.clearInterval(this.job);
+    },
+    timer: function() {
+		this.doTriggered({time: new Date().getTime()});
+    },
+    intervalChanged: function() {
+        this.stop();
+        this.start();
+    }
+});
