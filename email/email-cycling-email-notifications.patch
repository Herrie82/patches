+enyo.kind({
+	name: "DashboardShiftable",
+	kind: enyo.Dashboard,
+	create: function() {
+		this.inherited(arguments);
+	},
+	destroy: function() {
+		this.inherited(arguments);
+	},
+	unshift: function(layer) {
+		if(layer) {
+			this.layers.unshift(layer);
+			this.updateWindow();
+		}
+	},
+	shift: function() {
+		var layer = this.layers.shift();
+		this.updateWindow();
+		return layer;
+	},
+	cycleForwards: function() {
+		if (this.layers.length < 2) return;
+		this.unshift(this.pop());
+	},
+	cycleBackwards: function() {
+		if (this.layers.length < 2) return;
+		this.push(this.shift());
+	}
+});
